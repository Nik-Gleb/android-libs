<resources
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:custom="http://schemas.android.com/apk/android.libs.widgets">

  <style name="CollectionRecyclerView" parent="android:Widget">
    <item name="android:descendantFocusability">afterDescendants</item>
    <!--<item name="layoutManager">GridLayoutManager</item>-->
    <item name="spanCount">1</item>
    <item name="reverseLayout">false</item>
    <item name="stackFromEnd">false</item>
    <item name="side">5</item>
    <item name="measure">false</item>
  </style>

  <style name="CollectionItemView" parent="android:Widget">
    <item name="android:focusable">true</item>
    <item name="android:clickable">true</item>
    <item name="android:background">@drawable/btn_default_material_shape</item>
    <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
    <item name="android:minHeight">48dip</item>
    <item name="android:minWidth">88dip</item>
    <item name="android:stateListAnimator">@drawable/button_state_list_anim_material</item>
    <item name="android:windowClipToOutline">true</item>
    <item name="android:gravity">center_vertical|center_horizontal</item>

  </style>
</resources>
